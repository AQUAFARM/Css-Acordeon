fondo_azul = #3497db
sombra = 5px 3px 2px rgba(black, .2)

body
	font-family Arial
	font-size 18px
	text-align center

.flat1
	background #ecf0f1
	border-radius 10px
	display inline-block
	height auto
	margin .5em
	padding 1em 0 2em 0
	width 340px

	.titulo1
		background #2c3e50
		color white
		font-size 2em
		font-weight bold
		margin 0
		padding 0
		width 100%

	.fondo_iconos1
		background fondo_azul
		border-radius 20px
		display inline-block
		height 150px
		margin .25em
		position relative
		top 25px
		width 150px

		.calendario
			background white
			border-radius 20px
			box-shadow sombra
			height 120px
			left 15px
			position absolute
			top 15px
			width 120px

			&:before
				background #c1392b
				border-radius 20px 20px 0 0
				color white
				content ""
				height 30px
				left 0
				position absolute
				top 0
				width 120px

			.dia
				color white
				font-size 18px
				height 30px
				left 0
				margin 0
				position absolute
				text-align center
				top 5px
				width 120px
				z-index 1

			.numero
				background transparent
				color black
				font-size 70px
				font-weight bold
				margin 30px 0 0 0
				text-align center
				text-shadow 2px 2px 3px rgba(black, .3)
		.disquete
			background #2C3E50
			border-radius 20px
			box-shadow sombra
			height 120px
			left 15px
			position absolute
			top 15px
			width 120px

			.aluminio
				background #ecf0f1
				border-radius 0 0 5px 5px
				height 40px
				left 20px
				position absolute
				top 0
				width 80px

				.sombra
					border-left 50px solid transparent
					border-radius 0 0 5px 5px
					border-top 40px solid #bdc3c7
					height 0
					position absolute
					right 0
					top 0
					width 0

				.cuadro_sombra
					background #2C3E50
					border-radius 2px
					bottom 3px
					box-shadow 1px -1px 2px rgba(black, .6)
					height 30px
					position absolute
					right 5px
					width 20px

			.etiqueta
				background white
				border-radius 5px 5px 0 0
				bottom 0
				height 60px
				left 20px
				position absolute
				width 80px

				.lineas
					left 10px
					margin 0
					padding 0
					position absolute
					top 0
					width 60px

					li
						background #95A5A6
						border-radius 2px
						display block
						height 8px
						margin 8px 0 0 0
						padding 0
						text-decoration none
						width 60px

					.corta
						width 50px

		.mensajes
			background white
			border-radius 50%
			box-shadow sombra
			height 90px
			left 15px
			position absolute
			top 30px
			width 120px

			&:after
				border-bottom 35px solid transparent
				border-left 10px solid transparent
				border-right 10px solid transparent
				border-top 35px solid white
				content ""
				height 0
				left 5px
				position absolute
				top 70px
				transform rotate(45deg)
				width 0

		.sobre
			background white
			border-radius 5px
			box-shadow sombra
			height 80px
			left 15px
			position absolute
			top 35px
			width 120px

			.pico_arriba
				position absolute
				z-index 1
				.pico1
					border-bottom 40px solid transparent
					border-left 59px solid transparent
					border-right 59px solid transparent
					border-top 48px solid fondo_azul
					left 1px
					position absolute
					top 5px
				.pico2
					border-bottom 40px solid transparent
					border-left 60px solid transparent
					border-right 60px solid transparent
					border-top 45px solid white
					left 0
					position absolute
					top 4px

			.pico_abajo
				.pico1
					border-bottom 55px solid fondo_azul
					border-left 60px solid transparent
					border-right 60px solid transparent
					border-top 40px solid transparent
					bottom 4px
					left 0
					position absolute
				.pico2
					border-bottom 50px solid white
					border-left 60px solid transparent
					border-right 60px solid transparent
					border-top 40px solid transparent
					bottom 4px
					left 0
					position absolute

.flat2
	background #99d24f
	border-radius 10px
	display inline-block
	height auto
	margin .5em
	padding 1em 0 2em 0
	width 340px

	.fondo_iconos2
		background lighten(#99d24f, 20%)
		border-radius 20px
		display inline-block
		height 150px
		margin .25em
		position relative
		top 25px
		width 150px

		.calculadora
			position absolute
			top 15px
			left 15px
			background white
			border-radius 10px
			width 120px
			height 120px

			.cuadros
				position absolute
				top 10px

				p
					background #DBE1E3
					box-shadow 1px 1px 2px rgba(black, .2)
					border-radius 5px
					color #6C7A89
					display inline-block
					font-family verdana
					font-size 25px
					font-weight bold
					height 35px
					margin 3px 3px
					padding 5px
					width 35px
				.igual
					background #FD8465
					color white

		.camara
			background #ecf0f1
			border-radius 15px
			height 100px
			left 15px
			position absolute
			top 25px
			width 120px

			&:after
				background #ecf0f1
				border-radius 10px 10px 0 0
				content ""
				height 40px
				position absolute
				right 30px
				top -15px
				width 60px
				z-index 0

			&:before
				background #54A7A7
				box-shadow 1px 1px 3px rgba(black, .2)
				border-radius 50%
				content ""
				height 10px
				left 10px
				position absolute
				top 10px
				width 10px

			.sombra
				background #bdc3c7
				height 50px
				position absolute
				top 25px
				width 120px

			.lente
				background #ecf0f1
				border-radius 50%
				box-shadow 0 4px 10px rgba(black, .3)
				height 70px
				left 25px
				position absolute
				top 15px
				width 70px
				z-index 1

				&:before
					background #4183D7
					box-shadow  0 -3px 3px rgba(black, .2)
					border-radius 50%
					content ""
					height 50px
					left 10px
					position absolute
					top 10px
					width 50px

	.titulo2
		background rgba(white,.9)
		color #16a085
		font-size 2em
		font-weight bold
		margin 0
		padding 0
		width 100%
