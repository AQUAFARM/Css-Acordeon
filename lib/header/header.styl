/*------------------------------------*\
    BLOQUE INFO
\*------------------------------------*/
.info
    background rgba(white, 90%)
    box-shadow z-depth-1 //sombra en vars_mat_design.styl
    padding .5em 0
    text-align center
    width 100%

    &__title
        color primary-text-color //color en vars_mat_design.styl
        display block
        font-size 2.5rem
        font-weight 300
        margin .25em
        width auto

    &__autor
        color secondary-text-color //color en vars_mat_design.styl
        font-weight 300
        margin 0

    &__by
        font-weight 100

    &__social-icon
        -moz-osx-font-smoothing: grayscale;
        -webkit-font-smoothing: antialiased;
        border-radius 50%
        box-shadow z-depth-1 //sombra en vars_mat_design.styl
        color secondary-text-color //color en vars_mat_design.styl
        display inline-block
        font-family 'Material-icon'
        font-size 1.5rem
        font-weight normal
        height 40px
        line-height 40px
        margin .5em
        padding .2em
        text-align center
        text-decoration none
        transition background ease .25s, box-shadow ease .5s
        vertical-align middle
        width 40px

        &:hover
            box-shadow z-depth-2 //sombra en vars_mat_design.styl

        &--mail:before
            content '\e606'
        &--mail:hover
            background dark-primary-color //color en vars_mat_design.styl
            color white

        &--facebook:before
            content '\e62d'
        &--facebook:hover
            background #1e62a9
            color white

        &--twitter:before
            content '\e62e'
        &--twitter:hover
            background #4eb9f3
            color white

        &--github:before
            font-size 35px
            content '\e62c'
        &--github:hover
        &--download:hover
            background white
            color #333

         &--download:before
            content '\e604'

@media screen and (max-width 600px)
    .info__title
        font-size 2rem
        padding 0

    .info__autor
        margin-bottom .5em

    .info__social-icon
        font-size 1.2rem
        height 30px
        line-height 30px
        margin .4em
        width 30px

        &--mail
            background dark-primary-color //color en vars_mat_design.styl
            color white

        &--facebook
            background #1e62a9
            color white

        &--twitter
            background #4eb9f3
            color white

        &--github
        &--download
            background white
            color #333

        &--github:before
            font-size 30px
