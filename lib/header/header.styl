/*
 * BLOQUE HEADER.....Header que contiene título y autor del proyecto
 * BLOQUE MOBILE...Botón que muestra el código QR para ver en moviles
 */

/*------------------------------------*\
    BLOQUE HEADER
\*------------------------------------*/
.header
    background dark-primary-color
    box-shadow z-depth-1 //sombra en vars_mat_design.styl
    box-sizing border-box
    padding 1em 0
    position relative
    text-align center
    width 100%

    &__title
        color rgba(white, .9)
        display block
        font-size 2.5rem
        font-weight 300
        margin .25em
        width auto

    &__autor
        color light-primary-color //color en vars_mat_design.styl
        font-weight 400
        margin 0

    &__by
        font-weight 100

    &__social-icon
        -moz-osx-font-smoothing: grayscale;
        -webkit-font-smoothing: antialiased;
        background-color default-primary-color
        border-radius 50%
        box-shadow z-depth-1 //sombra en vars_mat_design.styl
        color white
        display inline-block
        font-family 'Material-icon'
        font-size 1.5rem
        font-weight normal
        height 40px
        line-height 40px
        margin .5em
        padding .2em
        text-align center
        text-decoration none
        transition background ease .25s, box-shadow ease .5s
        vertical-align middle
        width 40px

        &:hover
            background-color lighten(accent-color, 5%)
            box-shadow z-depth-2 //sombra en vars_mat_design.styl

        &--mail:before
            content '\e606'

        &--facebook:before
            content '\e62d'

        &--twitter:before
            content '\e62e'

        &--github:before
            font-size 35px
            content '\e62c'

         &--download:before
            content '\e604'

@media screen and (max-width 600px)
    .header__title
        font-size 2rem
        padding 0

    .header__autor
        margin-bottom .5em

    .header__social-icon
        font-size 1.2rem
        height 30px
        line-height 30px
        margin .4em
        width 30px

        &--github:before
            font-size 30px
