.ripple
    -webkit-tap-highlight-color rgba(0, 0, 0, 0)
    touch-action none

    &--label-parent
        overflow hidden
        position relative

    &--btn-parent
        background-color darken(dark-primary-color, 10%)
        border-radius .125em
        display inline-block
        margin 6.8125px .5em 0 .5em
        MaterialShadow(1)
        overflow hidden
        position relative
        transition all .3s ease
        width 7em

        &:hover
            background-color lighten(dark-primary-color, 5%)
            box-shadow z-depth-2

    &-ink
        border-radius 100%
        display block
        position absolute
        transform scale(0)

    &-ink-animate
        animation ripple .7s linear

    &::selection
        background-color rgba(255,255,255,0)

@keyframes ripple
    100%
        opacity 0
        transform scale(2.5)
