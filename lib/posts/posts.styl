/**------------------------------------------
 **  COMPONENTE POST
 **------------------------------------------*/
.post
    background-color lighten(light-primary-color, 90%)
    color default-primary-color
    height 0
    opacity 0
    overflow hidden
    padding 0
    transform scale(0)
    transition padding .4s ease, transform .55s ease, opacity .55s ease-in-out .2s
    visibility hidden
    width 100%

    &__image
        border-radius 2px 2px 0 0
        opacity .9
        width 100%

    &__content
        padding 4%

    &__title
        margin 0
        MaterialText(headline)

    &__date
        color lighten(default-primary-color, 35%)
        margin 0
        MaterialText(caption)

    &__paragraph
        margin 1em 0 0 0
        MaterialText(body-1)

    /.acordeon-item__input:checked + .ripple-parent + .post
        height auto
        opacity 1
        padding 0
        transform scale(1)
        visibility visible

@media screen and (max-width 600px)
    .post
        font-size 1.1rem
        line-height 1.6rem
