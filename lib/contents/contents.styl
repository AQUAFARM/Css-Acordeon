/*------------------------------------*\
    BLOQUE CONTENIDOS
\*------------------------------------*/
.content
    background-color lighten(light-primary-color, 90%) //color en vars_mat_design.styl
    color lighten(default-primary-color, 15%)
    font-size 1.2rem
    font-weight 300
    height 0
    line-height 1.8rem
    opacity 0
    overflow hidden
    padding 0 2%
    transform scaleY(0)
    transition height .5s ease, transform .6s ease, opacity .4s ease-in .2s
    visibility hidden
    width 96%

    &__title
        font-weight 400
        margin .5em 0

    &__text
        margin 0

@media screen and (max-width 600px)
    .content
        font-size 1.1rem
        line-height 1.6rem
