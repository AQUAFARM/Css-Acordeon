/*------------------------------------*\
    BLOQUE ACORDEON
\*------------------------------------*/
.acordeon-item
    background-color white
    display table

    &__label
        background-color white
        border z-depth-0 //borde en vars_mat_design.styl
        color secondary-text-color //color en vars_mat_design.styl
        cursor pointer
        display block
        font-size 1rem
        height 2em
        line-height 2em
        padding .5em
        transition all ease .3s

        &::after
            -moz-osx-font-smoothing: grayscale;
            -webkit-font-smoothing: antialiased;
            content '\e61f'
            float right
            font-family 'Material-icon'
            font-size 1.5rem
            transition all ease .5s

        &:hover
            background-color lighten(divider-color, 92%)

    &__input
        display none

    &__input:checked + .acordeon-item__label + .content
        height auto
        opacity 1
        overflow auto
        padding 2%
        transform translateX(0)
        visibility visible

    &__input:checked + .acordeon-item__label:after
        transform rotate(90deg)

@media screen and (max-width 600px)
    .acordeon-item
        width 95%
