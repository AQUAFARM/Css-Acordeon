/**
 **  COMPONENTE ACORDEON
 **------------------------------------------*/
.acordeon
    MaterialShadow(1)

    &-item
        display block

        &__label
            background-color default-primary-color //color en variables.styl
            border-bottom solid 1px darken(light-primary-color, 30%)//color en variables.styl
            color white2
            cursor pointer
            display block
            MaterialText(subhead-2)
            padding .5em
            transition all .5s ease

            &:hover
                background-color darken(default-primary-color, 17%) //color en variables.styl

            &::after
                -moz-osx-font-smoothing: grayscale;
                -webkit-font-smoothing: antialiased;
                content '\e61f'
                float right
                font-family 'Material-icon'
                font-size 1.5rem
                transition all .5s ease

            &::before
                background-color accent-color
                bottom 0
                content ''
                display block
                height 4px
                position absolute
                right 0
                transition all .2s linear
                width 0

            &:hover::before
                width 100%

        &__input
            display none

            &:checked + .ripple-parent > .acordeon-item__label
                background-color darken(default-primary-color,17%) //color en variables.styl

            &:checked + .ripple-parent > .acordeon-item__label::before
                background-color rgba(255,255,255,.75)
                left 0
                width 100%

            &:checked  + .ripple-parent > .acordeon-item__label::after
                transform rotate(90deg)
