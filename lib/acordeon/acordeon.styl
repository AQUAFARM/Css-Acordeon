/*------------------------------------*\
    BLOQUE ACORDEON
\*------------------------------------*/
.acordeon-item
    background-color lighten(light-primary-color, 90%)
    display block

    &__label
        background-color default-primary-color//lighten(light-primary-color, 70%)
        border-bottom solid 1px rgba(255,255,255,.3)//borde en vars_mat_design.styl
        box-shadow z-depth-1
        color rgba(255,255,255,.9) //color en vars_mat_design.styl
        cursor pointer
        display block
        font-size 1rem
        height 2em
        line-height 2em
        padding .5em
        transition all ease .3s
        position relative

        &::after
            -moz-osx-font-smoothing: grayscale;
            -webkit-font-smoothing: antialiased;
            content '\e61f'
            float right
            font-family 'Material-icon'
            font-size 1.5rem
            transition all ease .5s

        &:hover
            border-color rgba(255,255,255,.1)
            background-color rgba(default-primary-color, .9)
            z-index 20

    &__input
        display none

    &__input:checked + .acordeon-item__label
        background-color rgba(default-primary-color, .9)
        border-left 10px solid accent-color
        box-shadow z-depth-1
        z-index 10

    &__input:checked + .acordeon-item__label + .content
        height auto
        opacity 1
        overflow auto
        padding 2%
        transform translateX(0)
        visibility visible

    &__input:checked + .acordeon-item__label:after
        transform rotate(90deg)
