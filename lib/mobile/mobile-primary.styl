/**
 **  COMPONENTE MOBILE
 **------------------------------------------*/
.mobile
    background-color accent-color //color en vars_mat_design.styl
    border-radius 50%
    color white
    height 3.75em
    MaterialShadow(2)
    overflow hidden
    position absolute
    right 1.875em
    text-align center
    top -1.875em
    transition all .25s linear
    width 3.75em
    z-index 1

    &:hover
        MaterialShadow(3)
        background-color lighten(accent-color, 15%)

    &__checkbox
        display none

    &__label
        cursor pointer
        display inline-block
        font-size 1.75rem
        font-weight 300
        height 100%
        line-height 60px
        text-align center
        transition all 1s ease
        width 100%

    &__qr-image
        border-radius 100%
        bottom 14%
        left 0
        opacity 0
        position absolute
        transform scale(.5)
        visibility hidden
        width 100%

    /.mobile__checkbox:checked + .mobile__label + .mobile__qr-image
        animation mobile__qr-image .25s linear .8s 1 normal forwards

@media screen and (max-width 600px)
    .mobile
    .mobile--active
        display none
