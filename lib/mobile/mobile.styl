/**------------------------------------------
 **  PARTE DEL COMPONENTE MOBILE__
 **  mobile__label
 **------------------------------------------*/
.mobile__label
    &::before
        -moz-osx-font-smoothing  grayscale
        -webkit-font-smoothing  antialiased
        content '\e608'
        display block
        font-family 'Material-icon'
        font-size 3.5rem
        line-height 120px
        transition all .3s ease

    &:hover::before
        font-size 2rem
        line-height 60px

    &:hover::after
        content 'Watch on your phone...'
        line-height 16px

    /.mobile__checkbox:checked + .mobile__label
        border-radius 0 0 50% 50%
        box-shadow z-depth-2 //sombra en variables.styl

    /.mobile__checkbox:checked + .mobile__label::before
        content '\e626'
        font-size 2rem
        line-height 1.9em

    /.mobile__checkbox:checked + .mobile__label:after
        content 'Read the QR code'

/**------------------------------------------
 **  PARTE DEL COMPONENTE MOBILE__
 **  mobile__qr__container
 **------------------------------------------*/
.mobile__qr-container
    bottom 105%
    height auto
    left 0
    margin 0
    padding 0
    position absolute
    transform scale(0)
    transition transform .3s ease-in
    visibility hidden
    width 120px

    /.mobile__checkbox:checked + .mobile__label + .mobile__qr-container
        transform scale(1)
        visibility visible
