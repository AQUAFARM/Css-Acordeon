/**
 **  COMPONENTE MOBILE--ACTIVE
 **------------------------------------------*/
.mobile
    &--active
        background-color white
        border-radius 2px
        color white
        height 14em
        MaterialShadow(3)
        overflow hidden
        position absolute
        right 2em
        text-align center
        top 2em
        transition width .4s ease, height .4s ease, border-radius .4s ease, position.5s ease
        width 10em
        z-index 10

        &::before
            animation mobile--active .2s ease .4s 1 normal forwards
            background-color accent-color
            border-radius 0 0 2px 2px
            bottom 0
            content 'Scan the code'
            display block
            height 14%
            left 0
            line-height 31.3594px
            opacity 0
            position absolute
            width 100%
            z-index 50

/**
 **  PARTE DEL COMPONENTE MOBILE__
 **	        mobile__label
 **------------------------------------------*/
.mobile
    &__label::before
        color black54
        content '\e620'
        cursor pointer
        font-family 'Material-icon'
        font-size 1.22rem
        height 15%
        line-height 33.5938px
        opacity 0
        padding 0 5%
        position absolute
        right 2%
        text-align center
        top 2%
        transform rotate(-90deg)
        transition all .3s ease
        visibility hidden
        width 11%

        /.mobile__checkbox:checked + .mobile__label::before
            animation mobile__label .2s ease .8s 1 normal forwards

    &__label:hover::before
        color darken(black54, 30%)
