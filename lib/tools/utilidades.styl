/**
 **  U-header-text
 **------------------------------------------*/
.U-header-text
    display block
    margin 0
    text-align right

@media screen and (max-width 570px)
    .U-header-text
        text-align center

/**
 **  U-animated-link
 **------------------------------------------*/
.U-animated-link::before
.U-animated-link::after
    background-color darken(dark-primary-color, 10%)
    content ''
    display block
    height 50%
    MaterialShadow(1)
    position absolute
    transition all .2s ease-in-out
    width 0
    z-index -1

.U-animated-link::before
    border-radius .125em .125em 0 0
    top 0
    left 0

.U-animated-link::after
    border-radius 0 0 .125em .125em
    bottom 0
    right 0

.U-animated-link:hover::after
.U-animated-link:hover::before
    width 100%
