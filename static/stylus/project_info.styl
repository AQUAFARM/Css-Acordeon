/*------------------------------------*\
    BLOQUE MOBILE
\*------------------------------------*/
.mobile
    border-radius 50%
    display block
    height 120px
    margin 0 auto 5em auto
    position relative
    width 120px

    &__label
        background accent-color
        border-radius 50%
        box-shadow z-depth-1
        color white
        cursor pointer
        display block
        font-weight 300
        height 100%
        overflow hidden
        text-align center
        transition all ease .3s
        width 100%

        &:hover
            box-shadow z-depth-2

        &:before
            -moz-osx-font-smoothing  grayscale
            -webkit-font-smoothing  antialiased
            content '\e608'
            display block
            font-family 'Material-icon'
            font-size 3.5rem
            line-height 7.5rem
            transition all ease .3s

        &:hover:before
            font-size 2rem
            line-height 1.9em

        &:hover:after
            content 'Watch on your phone...'
            line-height 1.1em

    &__checkbox
        display none

        &:checked + .mobile__label
            border-radius 50% 0% 0% 50%
            box-shadow z-depth-2

        &:checked + .mobile__label:before
            content '\e626'
            font-size 2rem
            line-height 1.9em

        &:checked + .mobile__label:after
            content 'Read the QR code'

        &:checked + .mobile__label + .mobile__qr-container
            left 140px
            opacity 1
            visibility visible

    &__qr-container
        height auto
        left 30px
        margin 0
        opacity 0
        padding 0
        position absolute
        top 0
        transition all ease .3s
        transition-delay .5s
        visibility hidden
        width 120px
        z-index -100

    &__qr-image
        max-width 100%
        box-shadow z-depth-3

@media screen and (max-width 600px)
    .mobile
        display none
