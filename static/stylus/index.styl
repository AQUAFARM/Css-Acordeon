@import 'normalize'

@font-face {
	font-family: 'icomoon';
	src:url('../fonts/icomoon.eot?-1sj7id');
	src:url('../fonts/icomoon.eot?#iefix-1sj7id') format('embedded-opentype'),
		url('../fonts/icomoon.woff?-1sj7id') format('woff'),
		url('../fonts/icomoon.ttf?-1sj7id') format('truetype'),
		url('../fonts/icomoon.svg?-1sj7id#icomoon') format('svg');
	font-weight: normal;
	font-style: normal;
}

@import 'vars_mat_design'

body
	background color2

.wrapper
	background white
	box-shadow z-depth-2
	display block
	margin 2em auto
	overflow hidden
	width 600px

	&__tab
		background white
		border-bottom border-1
		color secondary-text-color
		cursor pointer
		display block
		font-size 1rem
		height 32px
		line-height 32px
		padding .5em
		transition all ease-in .5s

		&::after
			content '\e600'
			float right
			font-family 'icomoon'
			font-size 1.5rem
			transition all ease-in .5s

		&:hover
			background lighten(color4, 70%)
			box-shadow z-depth-1
			position relative
			z-index 100

	&__input
		display none

	&__input:checked + .wrapper__tab + .content
		height auto
		opacity 1
		overflow auto
		padding 2%
		transform translatex(0px)
		visibility visible

	&__input:checked + .wrapper__tab:after
		-ms-transform rotate(450deg)
		-webkit-transform rotate(450deg)
		transform rotate (450deg)

.content
	background default-primary-color
	box-shadow z-depth-1
	color white
	font-size 1.2rem
	font-weight 300
	height 0
	line-height 1.8rem
	opacity 0
	overflow hidden
	padding 0
	transform translatex(-100%)
	transition transform .5s cubic-bezier(0.23, 1, 0.32, 1),opacity .5s cubic-bezier(0.23, 1, 0.32, 1)
	visibility hidden
	width 96%

	&__title
		margin 0

