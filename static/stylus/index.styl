@import 'normalize'

.wrapper
	box-shadow 5px 5px 2px lighten(black, 80%)
	display block
	margin 2em auto
	width 80%

	&__label
		background white
		border solid 1px lighten(black, 80%)
		cursor pointer
		display block
		height 32px
		line-height 32px
		padding .5em
		transition all ease-in .3s

		&::before
			color #3498db
			content '+ '
			font-size 1.5rem
			font-weight bold
			line-height 1.8rem

		&:hover
			background lighten(gray, 95%)

	&__input
		display none

	&__input:checked + div[class="wrapper__content"]
		opacity 1
		display block
		height auto
		padding 2%

	&__content
		background #3498db
		color white
		display none
		height 0
		opacity 0
		padding 0 2%
		transition all ease 1s
		width 96%

		h1
			margin 0
