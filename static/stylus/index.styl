@import 'normalize'

@font-face {
    font-family: 'Material-icon';
    src:url('../fonts/Material-icon.eot?-pmbwi1');
    src:url('../fonts/Material-icon.eot?#iefix-pmbwi1') format('embedded-opentype'),
        url('../fonts/Material-icon.woff?-pmbwi1') format('woff'),
        url('../fonts/Material-icon.ttf?-pmbwi1') format('truetype'),
        url('../fonts/Material-icon.svg?-pmbwi1#Material-icon') format('svg');
    font-weight: normal;
    font-style: normal;
}

@import 'vars_mat_design'
@import 'project_info'

body
	background lighten(color2, 50%)

.wrapper
	background white
	box-shadow z-depth-2
	display block
	margin 2em auto
	overflow hidden
	width 600px

	&__tab
		background white
		border-bottom border-1
		color secondary-text-color
		cursor pointer
		display block
		font-size 1rem
		height 2em
		line-height 2em
		padding .5em
		transition all ease-in .25s

		&::after
			-moz-osx-font-smoothing: grayscale;
			-webkit-font-smoothing: antialiased;
			content '\e61f'
			float right
			font-family 'Material-icon'
			font-size 1.5rem
			transition all ease .3s

		&:hover
			background lighten(color4, 80%)

	&__input
		display none

	&__input:checked + .wrapper__tab + .content
		height auto
		opacity 1
		overflow auto
		padding 2%
		transform translatex(0px)
		visibility visible

	&__input:checked + .wrapper__tab:after
		-ms-transform rotate(90deg)
		-webkit-transform rotate(90deg)
		transform rotate (90deg)

.content
	background default-primary-color
	box-shadow z-depth-1
	color white
	font-size 1.2rem
	font-weight 300
	height 0
	line-height 1.8rem
	opacity 0
	overflow hidden
	padding 0
	transform translatex(-100%)
	transition transform .5s cubic-bezier(0.23, 1, 0.32, 1),opacity .5s cubic-bezier(0.23, 1, 0.32, 1)
	visibility hidden
	width 96%

	&__title
		margin 0
