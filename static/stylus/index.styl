/*
 * Normalize...............Normalize en formato .styl
 * IMPORTS.................Importamos fuentes de iconos y archivos .styl
 * BLOQUE ENVOLTURA........Estilos del bloque wrapper, envoltura de los contenidos
 * BLOQUE CONTENTS.........Estilos de los contenidos que muestra cada tab
 */

/*------------------------------------*\
    IMPORTS
\*------------------------------------*/
@import 'vars_mat_design'
@import 'normalize'
@import 'info'

@font-face {
    font-family: 'Material-icon';
    src:url('../fonts/Material-icon.eot?-pmbwi1');
    src:url('../fonts/Material-icon.eot?#iefix-pmbwi1') format('embedded-opentype'),
        url('../fonts/Material-icon.woff?-pmbwi1') format('woff'),
        url('../fonts/Material-icon.ttf?-pmbwi1') format('truetype'),
        url('../fonts/Material-icon.svg?-pmbwi1#Material-icon') format('svg');
    font-weight: normal;
    font-style: normal;
}

/*------------------------------------*\
    BLOQUE ENVOLTURA
\*------------------------------------*/
.wrapper
	background white
	box-shadow z-depth-2 //sombra en vars_mat_design.styl
	display block
	margin 2em auto
	overflow hidden
	width 600px

	&__tab
		background white
		border-bottom border-1
		color secondary-text-color //color en vars_mat_design.styl
		cursor pointer
		display block
		font-size 1rem
		height 2em
		line-height 2em
		padding .5em
		transition all ease-in .3s

		&::after
			-moz-osx-font-smoothing: grayscale;
			-webkit-font-smoothing: antialiased;
			content '\e61f'
			float right
			font-family 'Material-icon'
			font-size 1.5rem
			transition all ease .3s

		&:hover
			background lighten(color4, 80%)

	&__input
		display none

	&__input:checked + .wrapper__tab + .content
		height auto
		opacity 1
		overflow auto
		padding 2%
		transform translatex(0px)
		visibility visible

	&__input:checked + .wrapper__tab:after
		-ms-transform rotate(90deg)
		-webkit-transform rotate(90deg)
		transform rotate (90deg)

@media screen and (max-width 600px)
	.wrapper
		width 95%

/*------------------------------------*\
    BLOQUE CONTENIDOS
\*------------------------------------*/
.content
	background default-primary-color //color en vars_mat_design.styl
	box-shadow z-depth-1 //sombra en vars_mat_design.styl
	color white
	font-size 1.2rem
	font-weight 300
	height 0
	line-height 1.8rem
	opacity 0
	overflow hidden
	padding 0
	transform translatex(-100%)
	transition transform .5s cubic-bezier(0.23, 1, 0.32, 1),opacity .5s cubic-bezier(0.23, 1, 0.32, 1)
	visibility hidden
	width 96%

	&__title
		margin 0

@media screen and (max-width 600px)
	.content
		font-size 1rem
		line-height 1.6rem
		transform translatex(0)
		transition all 1s cubic-bezier(0.23, 1, 0.32, 1)
